<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


       <TextView
           android:id="@+id/cadastroTv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Cadastro"
           android:textSize="35sp"
           android:gravity="center_horizontal"
           android:background="#045D85"
           android:textColor="#FFFFFF"
           app:layout_constraintLeft_toLeftOf="parent"
           app:layout_constraintRight_toRightOf="parent"
           app:layout_constraintTop_toTopOf="parent" />


        <EditText
            android:id="@+id/nomeCompletoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nome completo"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/emailEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="E-mail"
            android:inputType="textEmailAddress" />

        <CheckBox
            android:id="@+id/receberEmailCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deseja receber e-mails com atualizações de oportunidades?" />

        <EditText
            android:id="@+id/telefoneET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone"
            android:inputType="phone" />

        <RadioGroup
            android:id="@+id/tipoTelefoneRg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/telComercialRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comercial" />

            <RadioButton
                android:id="@+id/telResidencialRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Residencial" />
        </RadioGroup>

        <CheckBox
            android:id="@+id/addCelularCb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Adicionar telefone celular" />

        <EditText
            android:id="@+id/celularEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Telefone celular"
            android:inputType="phone"
            android:visibility="gone" />

        <RadioGroup
            android:id="@+id/generoRg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/masculinoRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Masculino" />

            <RadioButton
                android:id="@+id/femininoRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Feminino" />

            <RadioButton
                android:id="@+id/outroRb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Outro" />
        </RadioGroup>

        <EditText
            android:id="@+id/dataNascimentoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Data de nascimento"
            android:inputType="date" />
       <TextView
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:ems="10"
           android:text="Formação"
           android:padding="5dp"
           android:layout_margin="5dp" />
       
        <Spinner
            android:id="@+id/formacaoSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/formacao" />

        <EditText
            android:id="@+id/anoConclusaoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ano de conclusão"
            android:inputType="number"
            android:visibility="gone" />

        <EditText
            android:id="@+id/instituicaoEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Instituição"
            android:inputType="text"
            android:visibility="gone" />

        <EditText
            android:id="@+id/tituloMonografiaEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título da monografia"
            android:inputType="text"
            android:visibility="gone" />

        <EditText
            android:id="@+id/orientadorEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Orientador"
            android:inputType="text"
            android:visibility="gone" />

        <EditText
            android:id="@+id/vagasInteresseEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Vagas de interesse"
            android:inputType="textMultiLine" />

        <!-- Botões -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="16dp">

            <Button
                android:id="@+id/btnLimpar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Limpar" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Salvar" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>